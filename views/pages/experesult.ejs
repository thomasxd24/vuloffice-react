<div class="row">
        
        <div class="col-lg-12 text-center">
            
          <h1 class="mt-5">
              <h1>Site: <%= page.data.siteName %> Commande: <%= page.data.orderID %></h1>
              <div class="input-group mb-3">
                  <input type="text" class="form-control form-control-lg" value="<%= page.data.trackingNumber %>" id="myInput" aria-describedby="basic-addon2" readonly>
                  <div class="input-group-append">
                      <button type="button" class="btn btn-info .btn-lg" id="basic-addon2" style="width: 200px" onclick="myFunction()">Copier</button>
                  </div>
                </div>
            
          </h1>
          
        </div>
      </div>
      <div class="row">
          <iframe src="data:application/pdf;base64,<%= page.data.pdfBase64 %>" height="800" width="100%" style='margin:0'></iframe>
      </div>
      <script>
      function myFunction() {
      /* Get the text field */
      var copyText = document.getElementById("myInput");
    
      /* Select the text field */
      copyText.select();
    
      /* Copy the text inside the text field */
      document.execCommand("copy");
    } 
    </script>